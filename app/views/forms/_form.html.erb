<%= semantic_form_for @form do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs do %>
    <%= f.input :name,   :hint => "Enter the  Full Name" %>
    <%= f.input :address, :hint => "Enter the Address" %>
    <%= f.input :date, :hint => "Enter the Date" %>
    <%= f.input :time, :hint => "Enter the Time" %>
    <%= f.input :comment, :hint => "Put your comment" %>
    <%= f.input :published, :hint => "Check Box" %>
  <% end %>
  <%= f.submit do %>
    <%= f.submit :button_html => {:class => "primary"} %>
  <% end %>
<% end %>
